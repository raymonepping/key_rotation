# App
PORT=3001
LOG_LEVEL=DEBUG             # INFO or DEBUG
AUTO_WRITE_RENDERED=false   # our Node app writes rendered file from KV (off by default)
WATCH_RENDERED=false         # watch and log when the file changes (on by default)

# HTTP method for Vault calls: AXIOS or VAULT
METHOD=VAULT                # AXIOS or VAULT

# Vault base
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=hvs.e1hMpCP7YyNhUBxIOCBgDCGt

# KV v2
KV_MOUNT=kv
KV_PATH=booklib/api
KV_FIELD=password

# Transit (optional; if you store ciphertext in KV and want plaintext)
TRANSIT_KEY=booklib-aes
CIPHER_FIELD=ciphertext

# Agent mode (optional)
# AGENT_RENDERED=./rendered/booklib.env

# KV polling (optional) to log rotation events (ms)
# Set to 0 to disable polling
POLL_MS=1000  # 1 second

# .env (add or adjust these)
APIKEY_KV_MOUNT=kv
APIKEY_KV_PATH=booklib/api-auth
APIKEY_FIELD=password            # if storing plaintext
APIKEY_CIPHER_FIELD=ciphertext   # if using Transit

# refresh interval for loading keys
APIKEY_REFRESH_MS=1000  # 1 second

